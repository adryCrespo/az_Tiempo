{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "containerGroupName": {
        "type": "string",
        "defaultValue": "az_tiempo",
        "metadata": {
          "description": "Container Group name."
        }
      },
      "imageRegistryLoginServer": {
        "type": "string",
        "defaultValue": "registroimagenes.azurecr.io",
        "metadata": {
            "description": "description"
        }
      },
      "imageRegistryUsername": {
        "type": "string",
        "defaultValue":"registroImagenes",
        "metadata": {
            "description": "description"
        }
      },
      "imageRegistryPassword": {
        "type": "string",
        "defaultValue":"Bgkfa5TkTu4wUHZKh3MO+toLorJpXYm5n/KDs3H/jb+ACRDOonDG",
        "metadata": {
            "description": "description"
        }
      },
      "port_db": {
        "type": "int",
        "metadata": {
          "description": "puerto de la base de datos"
        }
      },
      "port_server": {
        "type": "int",
        "metadata": {
          "description": "puerto de la base de datos"
        }
      }
    },
    "variables": {
      "container1name_db": "flask-db ",
      "container1image_db": "[concat(parameters('imageRegistryLoginServer'),'/',parameters('containerGroupName'),'/',variables('container1image'),':latest')]",
      "container2name_server": "flask-server",
      "container2image_server": "[concat(parameters('imageRegistryLoginServer'),'/',parameters('containerGroupName'),'/',variables('container2image'),':latest')]"

    },
    "resources": [
      {
        "name": "[parameters('containerGroupName')]",
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2023-05-01",
        "location": "[resourceGroup().location]",
        "properties": {
          "containers": [
            {
              "name": "[variables('container1name_db')]",
              "properties": {
                "image": "[variables('container1image_db')]",
                "resources": {
                  "requests": {
                    "cpu": 1,
                    "memoryInGb": 1.5
                  }
                },
                "ports": [
                  {
                    "port": "[parameters('port_db')]"
                  }
                  
                ]
              }
            },
                      {
              "name": "[variables('container2name_server')]",
              "properties": {
                "image": "[variables('container2image_server')]",
                "resources": {
                  "requests": {
                    "cpu": 1,
                    "memoryInGb": 1.5
                  }
                },
                "ports": [
                  {
                    "port": "[parameters('port_server')]" 
                  }
                  
                ]
              }
            }
          ],
          "osType": "Linux",
          "ipAddress": {
            "type": "Public",
            "ports": [
              {
                "protocol": "tcp",
                "port": "[parameters('port_server')]" 
              },
                {
                "protocol": "tcp",
                "port": "[parameters('port_db')]"
              }
            ]
          },
          "imageRegistryCredentials": [
                {
                    "server": "[parameters('imageRegistryLoginServer')]",
                    "username": "[parameters('imageRegistryUsername')]",
                    "password": "[parameters('imageRegistryPassword')]"
                }
                ]
        }
      }
    ],
    "outputs": {
      "containerIPv4Address": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
      }
    }
  }